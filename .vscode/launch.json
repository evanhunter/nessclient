    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pipenv",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "args": ["run", "pytest"]
        },
        {
            "name": "Debug All Tests with logging",
            "type": "debugpy",
            "request": "launch",
            "module": "pipenv",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "args": ["run", "pytest", "-s", "--log-cli-level=debug"]
        },
    ]
}